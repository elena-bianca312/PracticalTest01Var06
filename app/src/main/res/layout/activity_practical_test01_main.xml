<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ro.pub.cs.systems.eim.practicaltest01.view.PracticalTest01MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3">
        <EditText
            android:id="@+id/edit_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="number"
            android:ems="9"
            android:layout_row="0"
            android:layout_column="0"
            android:text=""
            android:saveEnabled="false"/>

        <EditText
            android:id="@+id/edit_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="number"
            android:ems="9"
            android:layout_row="0"
            android:layout_column="1"
            android:text=""
            android:saveEnabled="false"/>

        <EditText
            android:id="@+id/edit_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:inputType="number"
            android:ems="9"
            android:layout_row="0"
            android:layout_column="2"
            android:text=""
            android:saveEnabled="false"/>

        <CheckBox android:id="@+id/checkbox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text=""/>

        <CheckBox android:id="@+id/checkbox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text=""/>

        <CheckBox android:id="@+id/checkbox_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text=""/>


    </GridLayout>
    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="play"/>

</LinearLayout>